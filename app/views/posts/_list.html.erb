
<div class="grid-container">
        <% @posts.each do |post|%>    
            <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title"><%= link_to(post.title, post_path(post.id) )%></h5>
                <p class="card-text"> <%= post.body %></p>
            </div>
            </div>
        <% end %>
</div>




