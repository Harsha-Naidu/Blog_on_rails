<% @posts.each do |post|%>
    <div class="card-columns">
        <div class="card bg-light">
            <div class="card-body">
                <h2><%= link_to(post.title, post_path(post.id) )%></h2>
                <p class="card-text"> <%= post.body %></p>
            </div>
        </div>
    </div>
<% end %>
